		УстановитьМонопольныйРежим(Элемент.Значение);
		Оповестить("МонопольныйРежим", МонопольныйРежим(), ЭтаФорма);
	Исключение
		Оповестить("МонопольныйРежим", МонопольныйРежим(), ЭтаФорма);
		Сообщить(ОписаниеОшибки(), СтатусСообщения.ОченьВажное);
